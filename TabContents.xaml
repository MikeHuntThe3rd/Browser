<UserControl x:Class="Browser.TabContents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf">

    <Grid x:Name="grid" Background="#ECECEC">

        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CHROME TOP BAR -->
        <Border Background="#F1F3F4"
                BorderBrush="#DADCE0"
                BorderThickness="0,0,0,1">
            <Grid Margin="8,6">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- BACK BUTTON -->
                <Border Width="32" Height="32" CornerRadius="16" Margin="2" Background="#E9EAEC">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E9EAEC"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#D0D0D0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#E9EAEC" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button x:Name="back"
                            IsEnabled="False"
                            Content="⯇"
                            FontSize="16"
                            Background="Transparent"
                            BorderThickness="0"
                            FocusVisualStyle="{x:Null}"
                            Foreground="#5F6368"
                            Click="back_Click"/>
                </Border>

                <!-- FORWARD BUTTON -->
                <Border Width="32" Height="32" CornerRadius="16" Margin="2" Grid.Column="1" Background="#E9EAEC">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E9EAEC"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#D0D0D0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#E9EAEC" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button x:Name="foward"
                            IsEnabled="False"
                            Content="⯈"
                            FontSize="16"
                            Background="Transparent"
                            BorderThickness="0"
                            FocusVisualStyle="{x:Null}"
                            Foreground="#5F6368"
                            Click="foward_Click"/>
                </Border>

                <!-- REFRESH BUTTON -->
                <Border Width="32" Height="32" CornerRadius="16" Margin="2" Grid.Column="2" Background="#E9EAEC">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E9EAEC"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#D0D0D0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#E9EAEC" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button x:Name="refresh"
                            IsEnabled="False"
                            Content="⟳"
                            FontSize="16"
                            Background="Transparent"
                            BorderThickness="0"
                            FocusVisualStyle="{x:Null}"
                            Foreground="#5F6368"
                            Click="refresh_Click"/>
                </Border>

                <!-- URL BAR -->
                <Border Grid.Column="3"
                        CornerRadius="20"
                        Background="White"
                        BorderBrush="#DADCE0"
                        BorderThickness="1"
                        Margin="12,0,0,0"
                        Height="36">
                    <Grid>
                        <TextBox x:Name="URL"
                                 Background="Transparent"
                                 Foreground="Black"
                                 BorderThickness="0"
                                 Padding="12,6"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 KeyDown="UrlInput"/>
                    </Grid>
                </Border>

            </Grid>
        </Border>

    </Grid>
</UserControl>
